{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "The average rating stars based on style of packaging",
  "data": {
    "url": "https://raw.githubusercontent.com/aimeetrangnguyen/FIT3179/master/map/data/ramen_normalise.csv"
  },
  "vconcat": [
    {
      "encoding": {
        "color": {
          "condition": {
            "selection": "brush",
            "title": "Style",
            "field": "Style",
            "type": "nominal",
            "scale": {
              "domain": ["Bowl", "Pack", "Cup", "Tray", "Box"],
              "range": ["#e7ba52", "#a7a7a7", "#aec7e8", "#1f77b4", "#9467bd"]
            }
          },
          "value": "lightgray"
        },
        "y": {"field": "Country", "title": "Country"},
        "x": {
          "title": "Stars rating",
          "aggregate": "mean",
          "field": "Stars",
          "type": "quantitative",
          "scale": {"zero": false}
        },
        "tooltip": [
           {"field": "Country", "type": "nominal"},
           {"aggregate": "mean", "field": "Stars", "type": "quantitative", "format": ".2f"}
         ]
      },
      "width": 500,
      "height": 200,
      "mark": "point",
      "selection": {"brush": {"encodings": ["x"], "type": "single"}},
      "transform": [{"filter": {"selection": "click"}}]
    },
    {
      "encoding": {
        "color": {
          "condition": {
            "selection": "click",
            "field": "Style",
            "scale": {
              "domain": ["Bowl", "Pack", "Cup", "Tray", "Box"],
              "range": ["#e7ba52", "#a7a7a7", "#aec7e8", "#1f77b4", "#9467bd"]
            }
          },
          "value": "lightgray"
        },
        "x": {"aggregate": "count", "title": "Count"},
        "y": {
          "title": "Style",
          "field": "Style",
          "type": "ordinal",
          "sort": "-x"
        }
      },
      "width": 500,
      "mark": "bar",
      "selection": {"click": {"encodings": ["color"], "type": "multi"}},
      "transform": [{"filter": {"selection": "brush"}}]
    }
  ],
  "config": {}
}
