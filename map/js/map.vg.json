{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Ramen ratings in Asia (2020)",
  "width": 600,
  "height": 300,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aimeetrangnguyen/FIT3179/master/map/js/asia1.geo.json",
        "format": {"type": "topojson", "feature": "asia"}
      },
      "mark": {"type": "geoshape", "fill": "rgb(242, 241, 231 )", "stroke": "white", "strokeWidth": 1}
    },
    {
  "data": {
    "url": "https://raw.githubusercontent.com/aimeetrangnguyen/FIT3179/master/map/js/asia1.geo.json",
    "format": {
      "type": "topojson",
      "feature": "asia"
    }
  },
  "mark": {
    "type": "geoshape", 
    "stroke": "white",
    "strokeWidth": 1
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/aimeetrangnguyen/FIT3179/master/map/data/ramen_normalise.csv"
        },
        "key": "Country",
        "fields": [
          "Average"
        ]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "encoding": {
    "color": {
      "field": "Average",
      "type": "quantitative",
      "title": "Average stars",
      "scale": {
        "scheme": "yelloworangered"
      }
    },
    "tooltip": [
      {
        "field": "properties.name",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Average",
        "type": "quantitative",
        "title": "Average stars rating",
        "format": ".2f"
      }
    ]
  }
    }
  ]
}
